{
	"name": "monovitality",
	"private": true,
	"version": "0.0.1",
	"description": "An example monorepo for a React SPA with Vite, SCSS, TypeScript, Storybook support",
	"type": "module",
	"keywords": [
		"React",
		"SPA",
		"Vite",
		"Storybook",
		"TypeScript",
		"SCSS",
		"monorepo",
		"Lerna"
	],
	"author": {
		"name": "Konstantin Kovalev",
		"email": "constantiner@gmail.com"
	},
	"contributors": [
		{
			"name": "Konstantin Kovalev",
			"email": "constantiner@gmail.com"
		}
	],
	"homepage": "https://github.com/Constantiner/monovitality#readme",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Constantiner/monovitality.git"
	},
	"bugs": {
		"url": "https://github.com/Constantiner/monovitality/issues"
	},
	"scripts": {
		"samoware-web-contacts:start": "npm run start-contacts --prefix ./packages/samoware-web",
		"dev": "npm run dev --prefix ./packages/web",
		"build": "npm run build --prefix ./packages/web",
		"lint:nonpackages": "npx eslint 'configurations/**/*.{js,cjs,ts}'",
		"lint": "npm run lint:nonpackages && npx lerna run lint",
		"lint-staged": "npx lint-staged",
		"preview": "npm run preview --prefix ./packages/web",
		"format": "npx prettier --write '**/*.{js,cjs,ts,jsx,tsx,css,scss,json,htm,html,yml,eslintrc,huskyrc,lintstagedrc,prettierrc,stylelintrc}'",
		"prepare": "husky install"
	},
	"workspaces": [
		"packages/*"
	],
	"dependencies": {
		"clsx": "^2.1.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"ts-pattern": "^5.0.6"
	},
	"devDependencies": {
		"@babel/eslint-parser": "^7.23.3",
		"@svgr/rollup": "^8.1.0",
		"@types/node": "^20.11.5",
		"@types/react": "^18.2.43",
		"@types/react-dom": "^18.2.17",
		"@typescript-eslint/eslint-plugin": "^6.14.0",
		"@typescript-eslint/parser": "^6.14.0",
		"@vitejs/plugin-react-swc": "^3.5.0",
		"cross-env": "^7.0.3",
		"eslint": "^8.55.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-config-react-app": "^7.0.1",
		"eslint-import-resolver-typescript": "^3.6.1",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-jest": "^27.6.3",
		"eslint-plugin-jsx-a11y": "^6.8.0",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^5.1.3",
		"eslint-plugin-react": "^7.33.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-react-refresh": "^0.4.5",
		"eslint-plugin-unicorn": "^50.0.1",
		"husky": "^8.0.0",
		"lerna": "^8.0.2",
		"lint-staged": "^15.2.0",
		"prettier": "^3.2.2",
		"sass": "^1.69.7",
		"stylelint": "^16.1.0",
		"stylelint-config-recommended": "^14.0.0",
		"stylelint-config-recommended-scss": "^14.0.0",
		"stylelint-prettier": "^5.0.0",
		"stylelint-scss": "^6.0.0",
		"typescript": "^5.2.2",
		"vite": "^5.0.8"
	}
}
